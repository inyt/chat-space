.content
  .side
    .side__user
      %h5= current_user.name
      .side__user--icon
        %i.fa.fa-pencil-square-o
        %i.fa.fa-cog
    .side__group
      - @groups.each do |group|
        %a{href: "/groups/#{group.id}/messages"}
          .side__group--name
            = group.name
          .side__group--message
            - if group.messages.last
              = group.messages.last.body
            - else
              no messages

  .main
    .main__header
      .main__header--left
        %h2= @group.name
        %p.main__header--users
        - @group.users.each do |user|
          %span
            = user.name
      .main__header--right
        %a.main__header--right Edit
    .main__body
      - @group.messages.last(5).reverse_each do |message|
        .chat-unit
          %p.chat-unit__name-time
            %span.name= message.user.name
            %span.time= message.updated_at
          %p.chat-unit__message= message.body

    .main__footer
      = form_for [@group, @message], html: { class: "main__footer--body" } do |f|
        = f.hidden_field :group_id, value: @group.id
        = f.text_field :body, placeholder: "type a message"
        %label.footer--file
          -# = f.file_field :image
          %i.fa.fa-image
        = f.submit "Send", class: "submit"
